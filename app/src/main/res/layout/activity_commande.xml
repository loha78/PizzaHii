<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="projectapp.com.pizzahii.commande.CommandeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voici les plats encore disponibles"
                android:textSize="20dp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/listePlatsDispoView"
                android:layout_weight="2"
                android:foregroundTintMode="add"
                android:foregroundTint="@android:color/darker_gray"
                android:choiceMode="multipleChoice">
            </ListView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plats commandés"
                android:textIsSelectable="false"
                android:textSize="20dp" />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/listePlatsCommandesView"
                android:layout_weight="1">
            </ListView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Numéro de commande"
                android:id="@+id/textViewNewOrderFrag1"
                android:layout_weight="3"
                android:gravity="fill_vertical"
                android:textSize="20dp" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/newOrderNumber"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="Annuler la commande"
                android:id="@+id/cancelButton"
                android:onClick="performButtonAction"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="Valider la commande"
                android:id="@+id/validateButton"
                android:onClick="performButtonAction"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="retour menu"
                android:id="@+id/returnButton"
                android:onClick="performButtonAction"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>